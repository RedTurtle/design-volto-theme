{
  "name": "design-volto-theme",
  "description": "Volto Theme for Italia design guidelines",
  "license": "MIT",
  "version": "6.4.0",
  "addons": [
    "volto-multilingual-widget",
    "volto-rss-block",
    "volto-venue",
    "volto-subblocks",
    "volto-dropdownmenu",
    "volto-subsites",
    "volto-social-settings",
    "volto-editablefooter",
    "volto-blocks-widget",
    "volto-google-analytics",
    "volto-secondarymenu",
    "volto-form-block",
    "volto-subfooter",
    "volto-customer-satisfaction",
    "volto-gdpr-privacy"
  ],
  "scripts": {
    "start": "razzle start",
    "postinstall": "yarn omelette",
    "omelette": "ln -sf node_modules/@plone/volto/ omelette",
    "build": "razzle build --noninteractive",
    "test": "razzle test --maxWorkers=1",
    "test:ci": "CI=true NODE_ICU_DATA=node_modules/full-icu razzle test",
    "test:coverage": "razzle test --coverage",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand",
    "start:prod": "NODE_ENV=production node build/server.js",
    "i18n": "rm -rf build/messages && NODE_ENV=production i18n",
    "release": "release-it --disable-metrics",
    "install-full": "rm -rfd node_modules/ && yarn cache clean && yarn install --frozen-lockfile",
    "analyze": "BUNDLE_ANALYZE=true razzle build"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "\\.[jt]sx?$": "babel-jest",
      "^.+\\.(png)$": "jest-file",
      "^.+\\.(jpg)$": "jest-file",
      "^.+\\.(svg)$": "./node_modules/@plone/volto/jest-svgsystem-transform.js"
    },
    "transformIgnorePatterns": [],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "@plone/volto/babel": "<rootDir>/node_modules/@plone/volto/babel",
      "@plone/volto/src/(.*)$": "<rootDir>/node_modules/@plone/volto/src/$1",
      "@plone/volto/(.*)$": "<rootDir>/node_modules/@plone/volto/src/$1",
      "@package/config": "<rootDir>/jest-addons-loader.js",
      "@italia/icons/fontawesome-free-5.15.4-web/svgs/\\${prefixFolder}/\\${iconName}\\.svg": "<rootDir>/src/icons/fontawesome-free-5.15.4-web/svgs/regular/moon.svg",
      "~/(.*)$": "<rootDir>/src/$1",
      "@root/(.*)$": "<rootDir>/src/$1",
      "@italia/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)",
      "!**/src/addons/volto/**/*",
      "!**/src/addons/**/*"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**",
      "!**/src/addons/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "setupFiles": [
      "@plone/volto/test-setup-globals.js",
      "@plone/volto/test-setup-config.js",
      "./test-setup-config.js"
    ],
    "globalSetup": "@plone/volto/global-test-setup.js",
    "globals": {
      "__DEV__": true
    }
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    },
    "ignoreFiles": "theme/themes/default/**/*.overrides"
  },
  "browserslist": [
    ">1%",
    "last 2 versions",
    "not ie 11",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "npx eslint --max-warnings=0 --fix",
      "npx prettier --single-quote --write"
    ],
    "src/**/*.jsx": [
      "yarn i18n",
      "git add ."
    ],
    "theme/**/*.{css,less}": [
      "npx stylelint --fix"
    ],
    "src/**/*.{css,less}": [
      "npx stylelint --fix"
    ],
    "theme/**/*.scss": [
      "npx stylelint --fix --customSyntax postcss-scss"
    ],
    "src/**/*.scss": [
      "npx stylelint --fix --customSyntax postcss-scss"
    ],
    "theme/**/*.overrides": [
      "npx stylelint --fix --syntax less"
    ],
    "src/**/*.overrides": [
      "npx stylelint --fix --syntax less"
    ]
  },
  "engines": {
    "node": "^14 || ^16"
  },
  "dependencies": {
    "@plone/volto": "16.0.0-alpha.45",
    "bootstrap-italia": "1.3.9",
    "classnames": "2.2.6",
    "design-react-kit": "3.1.3",
    "react-dropzone": "11.0.1",
    "react-google-recaptcha-v3": "1.7.0",
    "react-highlight-words": "0.18.0",
    "react-select": "^4.3.1",
    "react-slick": "^0.28.1",
    "slick-carousel": "1.8.1",
    "typeface-lora": "0.0.72",
    "typeface-roboto-mono": "0.0.75",
    "typeface-titillium-web": "0.0.72",
    "volto-blocks-widget": "3.0.0",
    "volto-customer-satisfaction": "1.0.0",
    "volto-dropdownmenu": "3.0.0",
    "volto-editablefooter": "5.0.0",
    "volto-form-block": "3.0.0",
    "volto-gdpr-privacy": "2.0.0",
    "volto-google-analytics": "2.0.0",
    "volto-multilingual-widget": "3.0.0",
    "volto-rss-block": "3.0.0",
    "volto-secondarymenu": "3.0.0",
    "volto-social-settings": "3.0.0",
    "volto-subblocks": "2.0.0",
    "volto-subfooter": "2.0.0",
    "volto-subsites": "4.0.0",
    "volto-venue": "4.0.0",
    "webpack-image-resize-loader": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@release-it/conventional-changelog": "^2.0.1",
    "bundlewatch": "^0.3.3",
    "eslint-plugin-prettier": "3.1.3",
    "jest-environment-jsdom": "^26.0.1",
    "prettier": "2.0.5",
    "razzle-plugin-scss": "4.2.17",
    "release-it": "^14.6.1",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2",
    "svg-inline-loader": "0.8.0",
    "svg-inline-react": "3.2.0"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "build/public/static/js/*.js",
        "normalizeFilenames": "^.+?(\\..+?)\\.\\w+$",
        "maxSize": "2000kB"
      }
    ],
    "ci": {
      "trackBranches": [
        "master",
        "develop",
        "bundlesize"
      ]
    }
  },
  "resolutions": {
    "moment": "2.29.3",
    "lodash": "4.17.21"
  }
}
