{
  "name": "design-volto-theme",
  "description": "Volto Theme for Italia design guidelines",
  "license": "MIT",
  "version": "4.0.0-alpha",
  "private": true,
  "workspaces": [
    "src/addons/volto-cookie-banner",
    "src/addons/volto-multilingual-widget",
    "src/addons/volto-rss-block",
    "src/addons/volto-geocoding"
  ],
  "addons": [
    "volto-cookie-banner",
    "volto-multilingual-widget",
    "volto-rss-block",
    "volto-geocoding"
  ],
  "scripts": {
    "start": "razzle start",
    "develop:npx": "npx -p mrs-developer missdev --config=jsconfig.json --output=addons",
    "develop": "missdev --config=jsconfig.json --output=addons",
    "preinstall": "if [ -f $(pwd)/node_modules/.bin/missdev ]; then yarn develop; else yarn develop:npx; fi",
    "postinstall": "yarn omelette",
    "omelette": "ln -sf node_modules/@plone/volto/ omelette",
    "build": "razzle build",
    "test": "razzle test --env=jsdom --passWithNoTests",
    "start:prod": "NODE_ENV=production node build/server.js",
    "i18n": "NODE_ENV=production node node_modules/@plone/volto/src/i18n.js"
  },
  "jest": {
    "transform": {
      "^.+\\.js(x)?$": "babel-jest",
      "^.+\\.css$": "jest-css-modules",
      "^.+\\.scss$": "jest-css-modules",
      "^.+\\.(png)$": "jest-file",
      "^.+\\.(jpg)$": "jest-file",
      "^.+\\.(svg)$": "./node_modules/@plone/volto/jest-svgsystem-transform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@plone/volto).+\\.js$"
    ],
    "moduleNameMapper": {
      "@plone/volto/(.*)$": "<rootDir>/node_modules/@plone/volto/src/$1",
      "@plone/volto/babel": "<rootDir>/node_modules/@plone/volto/babel",
      "@design/(.*)$": "<rootDir>/src/$1",
      "~/(.*)$": "<rootDir>/src/$1",
      "volto-rss-block/(.*)$": "<rootDir>/src/addons/volto-rss-block/src/$1",
      "volto-cookie-banner/(.*)$": "<rootDir>/src/addons/volto-cookie-banner/src/$1",
      "volto-multilingual-widget/(.*)$": "<rootDir>/src/addons/volto-multilingual-widget/src/$1",
      "volto-geocoding/(.*)$": "<rootDir>/src/addons/volto-geocoding/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)",
      "!**/src/addons/volto/**/*",
      "!**/src/addons/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "setupFiles": [
      "@plone/volto/test-setup.js"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    },
    "ignoreFiles": "theme/themes/default/**/*.overrides"
  },
  "engines": {
    "node": "^10 || ^12"
  },
  "dependencies": {
    "@plone/volto": "plone/volto#split_styles_demo",
    "bootstrap-italia": "1.3.9",
    "classnames": "2.2.6",
    "design-react-kit": "3.1.3",
    "react-slick": "0.25.2",
    "slick-carousel": "1.8.1",
    "typeface-lora": "0.0.72",
    "typeface-roboto-mono": "0.0.75",
    "typeface-titillium-web": "0.0.72",
    "volto-cookie-banner": "collective/volto-cookie-banner",
    "volto-multilingual-widget": "collective/volto-multilingual-widget",
    "volto-rss-block": "redturtle/volto-rss-block",
    "volto-geocoding": "collective/volto-geocoding"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.1.3",
    "mrs-developer": "^1.1.6",
    "node-sass": "4.13.0",
    "prettier": "2.0.5",
    "sass-loader": "8.0.0",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2",
    "svg-inline-loader": "0.8.0",
    "svg-inline-react": "3.2.0"
  }
}
